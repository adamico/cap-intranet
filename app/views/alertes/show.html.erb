<% content_for :body_content_left do %>
  <p id="date"><%=l @alerte.date %></p>
  <h2><%= @alerte.titre %></h1>
  <%=raw @alerte.contenu %>
<% end %>

<% content_for :body_content_right do %>
  <aside class="liste alertes">
    <h2><%= link_to "Autres alertes", alertes_path %></h2>
    <%= render 'recent', :alertes => @other_alertes %>
  </aside>
<% end %>

<%= render :partial => "/shared/content_page" %>
