<% content_for :body_content_left do %>
  <h2><%= @document.titre %></h1>
  <section>
    <% if @document.source %>
      <p><%= link_to @document.source.file_name, @document.source.url %></p>
    <% end %>
  </section>

  <section>
    <p><%=raw @document.contenu %></p>
  </section>
<% end %>

<% content_for :body_content_right do %>
  <aside class="liste documents">
    <h2><%= link_to t('.other'), documents_path %></h2>
    <% if @other_documents.empty? %>
      Aucun autre document.
    <% else %>
      <div class="liste documents">
        <% @other_documents.each do |document| %>
          <p>
            <%= link_to document.titre, document_url(document) %>
          </p>
        <% end %>
      </div>
    <% end %>
  </aside>
<% end %>

<%= render :partial => "/shared/content_page" %>
