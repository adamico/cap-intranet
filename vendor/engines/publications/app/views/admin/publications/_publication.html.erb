<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(publication) -%>">
  <span class='title'>
    <%= truncate(publication.titre, :length => 60) %>
    <span class="preview">&nbsp;</span>
  </span>
  <span class="categorie">
    (<%= publication.publication_category rescue "" %>)
  </span>
  <span class='actions'>
    <%= link_to refinery_icon_tag("application_go.png"), publication_url(publication),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    <%= link_to refinery_icon_tag("application_edit.png"), edit_admin_publication_path(publication),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), admin_publication_path(publication),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'shared.admin.delete', :title => publication.title),
        :method => :delete %>
  </span>
</li>
