<% content_for :body_content_left do %>
  <h2><%= @publication.titre %></h2>
  <section>
    <p><%= @publication.publication_category.titleize %> publi√© en <%= l(@publication.date, :format => "%Y") %></p>
  </section>
  <section>
    <p>Fichier : <%= link_to @publication.source.file_name, @publication.source.url %></p>
  </section>
  <section>
    <p><%=raw @publication.contenu %></p>
  </section>
<% end %>

<% content_for :body_content_right do %>
  <aside class="liste publications">
    <h2><%= link_to t('.other'), publications_path %></h2>
    <%= render 'other', :publications => @other_publications %>
  </aside>
<% end %>

<%= render :partial => "/shared/content_page" %>
