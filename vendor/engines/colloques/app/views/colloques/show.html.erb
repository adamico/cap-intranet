<% content_for :body_content_title do %>
  <%= @colloque.title %>
<% end %>

<% content_for :body_content_left do %>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @colloque.title %>
    </p>
  </section>
  <section>
    <h1>Event</h1>
    <p>
      <%=raw @colloque.event %>
    </p>
  </section>
<% end %>

<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="colloques">
      <% @colloques.each do |colloque| %>
        <li>
          <%= link_to colloque.title, colloque_url(colloque) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render :partial => "/shared/content_page" %>
