<%= form_for [:admin, @colloque] do |f| -%>
  <%= render :partial => "/shared/admin/error_messages", :locals => {
          :object => @colloque,
          :include_object_name => true
        } %>

  <div class='field'>
    <%= f.label :title -%>
    <%= f.text_field :title, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= f.label :event_id, "Date" -%>
    <%= f.collection_select :event_id, Event.all, :id, :titre_with_date -%>
  </div>

  <div class='field'>
    <%= f.label :contenu -%>
    <%= f.text_area :contenu, :rows => 20, :class => 'wymeditor widest' -%>
  </div>

  <%= render :partial => "/shared/admin/form_actions",
              :locals => {
                :f => f,
                :continue_editing => false,
                :delete_title => t('delete', :scope => 'admin.colloques.colloque'),
                :delete_confirmation => t('message', :scope => 'shared.admin.delete', :title => @colloque.title)
              } %>
<% end -%>
