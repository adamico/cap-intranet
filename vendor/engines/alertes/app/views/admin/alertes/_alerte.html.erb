<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(alerte) -%>">
  <span class='date'>
    <%= l alerte.date rescue "" %>
  </span>
  <span class='title'>
    <%= alerte.titre %>
    <span class="preview">&nbsp;</span>
  </span>
  <span class='categorie'>
    <% Categorie.all %>
    (<%= alerte.categories_names.join(", ") rescue "" %>)
  </span>
  <span class='actions'>
    <%= link_to refinery_icon_tag("application_go.png"), alerte_url(alerte),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    <%= link_to refinery_icon_tag("application_edit.png"), edit_admin_alerte_path(alerte),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), admin_alerte_path(alerte),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'shared.admin.delete', :title => alerte.titre),
        :method => :delete %>
  </span>
</li>
