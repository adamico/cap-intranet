<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(enquete) -%>">
  <span class='title'>
    <%= enquete.titre %>
    <span class="preview">&nbsp;</span>
  </span>
  <span class='actions'>
    <%= link_to refinery_icon_tag("application_go.png"), enquete_url(enquete),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    <%= link_to refinery_icon_tag("application_edit.png"), edit_admin_enquete_path(enquete),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), admin_enquete_path(enquete),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'shared.admin.delete', :title => enquete.titre),
        :method => :delete %>
  </span>
</li>
