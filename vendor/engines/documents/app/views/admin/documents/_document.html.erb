<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(document) -%>">
  <span class='title'>
    <%= document.titre %>
    <span class="preview">&nbsp;</span>
  </span>
  <span class='actions'>
    <%= link_to refinery_icon_tag("application_go.png"), document_url(document),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    <%= link_to refinery_icon_tag("application_edit.png"), edit_admin_document_path(document),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), admin_document_path(document),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'shared.admin.delete', :title => document.titre),
        :method => :delete %>
  </span>
</li>
