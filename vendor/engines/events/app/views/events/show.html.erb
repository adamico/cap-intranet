<% content_for :body_content_left do %>
  <h2><%= @event.titre %></h2>
  <p>Début : <%= l @event.start_at %></p>
  <p>Durée : <%= distance_of_time_in_words(@event.start_at, @event.end_at) %></p>
  <% Categorie.all -%>
  <% @event.categories.each do |categorie| %>
    Catégorie(s) : <%= categorie.name.upcase %>
  <% end %>

  <% unless @event.contenu.blank? %>
    <section>
      <h1>Contenu</h1>
      <p><%=raw @event.contenu %></p>
    </section>
  <% end %>
<% end %>

<% content_for :body_content_right do %>
<aside class="liste events">
  <h2><%= link_to "Prochains événements", events_path %></h2>
  <%= render 'next_events', :events => @other_events %>
</aside>
<% end %>

<%= render :partial => "/shared/content_page" %>
